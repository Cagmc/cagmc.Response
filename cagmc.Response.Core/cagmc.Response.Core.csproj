<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageId>cagmc.Response.Core</PackageId>
        <Version>3.0.0</Version>
        <Authors>István Rózsa</Authors>
        <PackageProjectUrl>https://github.com/Cagmc/cagmc.Response</PackageProjectUrl>
        <Description>Instead of throwing exceptions, or returning bool, you could return meaningful responses</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NuGet.Build.Tasks.Pack" Version="6.13.1" PrivateAssets="all" />
        <None Include="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
